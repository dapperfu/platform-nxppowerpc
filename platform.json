{
  "name": "nxppowerpc",
  "title": "NXP PowerPC VLE",
  "description": "NXP PowerPC VLE microcontrollers (MPC57xx series) using PlatformIO's toolchain package system. Supports MPC-5748G and MPC-5748P boards with baremetal framework.",
  "homepage": "https://www.nxp.com/products/processors-and-microcontrollers/power-architecture-processors/powerpc-processors/powerpc-5xx-processors",
  "license": "Apache-2.0",
  "keywords": [
    "dev-platform",
    "NXP",
    "PowerPC",
    "VLE",
    "MPC57xx",
    "MPC5748G",
    "MPC5748P"
  ],
  "engines": {
    "platformio": "^6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dapperfu/platform-nxppowerpc.git"
  },
  "version": "1.0.0",
  "frameworks": {
    "baremetal": {
      "package": null,
      "script": "builder/frameworks/baremetal.py"
    },
    "freertos": {
      "package": null,
      "script": "builder/frameworks/freertos.py"
    },
    "arduino": {
      "package": null,
      "script": "builder/frameworks/arduino.py"
    }
  },
  "packages": {
    "toolchain-powerpc-eabivle": {
      "type": "toolchain",
      "version": "4.9.4.2724867"
    },
    "tool-pegdbserver-power": {
      "type": "tool",
      "version": "1.7.2.201709281658"
    },
    "framework-freertos": {
      "type": "framework",
      "optional": true,
      "owner": "platformio",
      "version": "~10.6.1"
    }
  }
}

